/* pages/user/user.wxss */
page{
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userContainer{
  display:flex;
  flex-direction: row;
  justify-items: center;
}
.basic{
  display: flex;
  flex-direction: row;
}
.userName{
  margin-top: 80rpx;
  margin-left: 35rpx;
  font-size: 36rpx;
  font-weight: bold;
}

/*头像用户名*/
.photo{ 
  border-radius: 50%;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  position: relative;
  background: white;
  left: 40rpx;
  top: -92rpx;
  margin-right: 60rpx;
  margin-top: 130rpx;
  margin-left: 30rpx;
}
.userInfo {
  border-radius: 50%;
  width: 120rpx;
  height: 70rpx;
}
.methodContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:680rpx
}
.method{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height:50px;
  margin-bottom: 40rpx;
  border-radius: 20px;
  background-color: #669966c4;
}
.methodText{
  font-size: 36rpx;
  font-weight: bold;
  color:#ffffff;
  line-height: 50px;
}