/* pages/share/share.wxss */
.comment{
  display: flex;
  flex-direction: column;
  margin: 10px 10px 10px 10px;
  border: 1px solid #1b747b;
  border-radius: 10px;
}
.author{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10px;
}
.avatar{
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  margin-left: 10px;
}
.authorName{
  font-size: 32rpx;
  margin-left: 15px;
}
.time{
  font-size: 28rpx;
  color: #8a8a8a;
}
.content{
  margin:10px 10px 0 10px;
  font-size: 30rpx;
  color:#575555
}
.interaction{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.icon{
  height: 20px;
  width: 20px;
  margin-left: 10px;
  margin-bottom: 10px;
}
.top{                /*顶部模块*/
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  position:fixed;
  bottom: -10px;
  background-color: #fff;
}
.Sinput{             /*输入框容器*/
height:30px;
width:550rpx;
margin:20rpx 0 10rpx 20rpx;
}
.SBtn{               /*按钮容器*/
  height:30px;
  width: 170rpx;
  margin:20rpx 20rpx 10rpx 0rpx;
} 
.inputSearch{        /*输入框*/
  height: 30px;
  width: 500rpx;
  line-height: 15px;   /*使文字水平居中*/
  border:0.5px solid #669966c4;
  border-radius: 30rpx;
}
.BtnSearch{           /*按钮*/
  size:mini;
  height:30px;
  background-color: #669966c4;
  color:#fff;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 15px;   /*使文字水平居中*/
}